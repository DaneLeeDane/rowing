<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="10dp"
              android:background="#D5F8D5">

    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:src="@drawable/ic_delete_black_24dp"
               android:id="@+id/img_record_delete"/>


    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                  android:orientation="vertical" android:gravity="end" android:layout_weight="1">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:gravity="center"
                  android:text="Player: "
                  android:textSize="18sp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:gravity="center"
                  android:text="Babel Weight: "
                  android:textSize="18sp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:gravity="center"
                  android:text="Distance: "
                  android:textSize="18sp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:gravity="center"
                  android:text="Time: "
                  android:textSize="18sp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:gravity="center"
                  android:text="Avg Velocity: "
                  android:textSize="18sp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:gravity="center"
                  android:text="Max Velocity: "
                  android:textSize="18sp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:gravity="center"
                  android:text="Date: "
                  android:textSize="18sp"/>

    </LinearLayout>

    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                  android:orientation="vertical" android:gravity="start" android:layout_weight="1">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:gravity="center"
                  android:text="이지훈"
                  android:textSize="18sp"
                  android:id="@+id/tv_record_player_name"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:gravity="center"
                  android:text="10 kg"
                  android:textSize="18sp"
                  android:id="@+id/tv_record_babel"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:gravity="center"
                  android:text="2000 m"
                  android:textSize="18sp"
                  android:id="@+id/tv_record_total_distance"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:gravity="center"
                  android:text="00:21:45"
                  android:textSize="18sp"
                  android:id="@+id/tv_record_time"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:gravity="center"
                  android:text="11 km/h"
                  android:textSize="18sp"
                  android:id="@+id/tv_record_avg_velocity"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:gravity="center"
                  android:text="19 km/h"
                  android:textSize="18sp"
                  android:id="@+id/tv_record_max_velocity"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:gravity="center"
                  android:text="~~~~~~~~~~~~~~~~"
                  android:textSize="18sp"
                  android:id="@+id/tv_record_date"/>
    </LinearLayout>

    <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/cb_record"/>

</LinearLayout>